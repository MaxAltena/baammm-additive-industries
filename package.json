{
	"name": "baammm-additive-industries",
	"version": "1.0.0",
	"private": true,
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "4.0.1",
		"styled-components": "^5.2.1",
		"styled-normalize": "^8.0.7",
		"styled-reset": "^4.3.3"
	},
	"scripts": {
		"start": "npm run storybook",
		"dev": "npm run storybook",
		"build": "npm run build-storybook",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"eslint": "eslint src --ext .js,.jsx,.ts,.tsx",
		"eslint:fix": "eslint --fix src --ext .js,.jsx,.ts,.tsx",
		"lint": "npm run prettier && npm run eslint && tsc --noEmit",
		"lint:fix": "npm run prettier:fix && npm run eslint:fix && tsc --noEmit",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --check --write ."
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@storybook/addon-actions": "^6.1.11",
		"@storybook/addon-essentials": "^6.1.11",
		"@storybook/addon-links": "^6.1.11",
		"@storybook/node-logger": "^6.1.11",
		"@storybook/preset-create-react-app": "^3.1.5",
		"@storybook/react": "^6.1.11",
		"@types/node": "^14.14.13",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/styled-components": "^5.1.5",
		"@typescript-eslint/eslint-plugin": "^4.9.1",
		"@typescript-eslint/parser": "^4.9.1",
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-react": "^7.21.5",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*": "npm run prettier:fix",
		"*.{js,jsx,ts,tsx}": "npm run eslint:fix"
	}
}
